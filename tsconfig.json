{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "types": ["react-native", "jest", "@types/styled-components-react-native", "node", "mocha"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "typeRoots": ["./src/types"],
      "baseUrl": ".",
      "paths": {
        // This needs to be mirrored in babel.config.js
        "src/*": ["src/*"]
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }